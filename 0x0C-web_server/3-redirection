#!/usr/bin/env bash
# This script installs Nginx, configures a redirection for /redirect_me, and restarts Nginx.

# Update package list
apt-get update -y

# Install Nginx
apt-get install nginx -y

# Configure Nginx redirection
sed -i 's@location / {@&\nlocation /redirect_me {\nreturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n}@' /etc/nginx/sites-available/default

# Restart Nginx to apply changes
service nginx restart

